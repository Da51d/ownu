# Dockerfile for running backend tests
FROM golang:1.25-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git gcc musl-dev

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY . .

# Default command runs all tests
CMD ["go", "test", "-v", "-race", "./..."]
